[flake8]
# Flake8 configuration for code quality

# Maximum line length
max-line-length = 100

# Exclude directories
exclude =
    .git,
    __pycache__,
    .tox,
    .eggs,
    *.egg,
    build,
    dist,
    .venv,
    venv,
    generated_documents,
    chroma_db,
    logs,
    .pytest_cache

# Error codes to ignore
ignore =
    E203,  # Whitespace before ':'
    E501,  # Line too long (handled by max-line-length)
    W503,  # Line break before binary operator
    W504,  # Line break after binary operator
    E402,  # Module level import not at top of file (needed for path setup)

# Select specific errors to check
select = E,W,F,C,N

# Maximum complexity (McCabe)
max-complexity = 15

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403
    tests/*:F401,F841
